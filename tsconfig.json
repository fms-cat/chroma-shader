{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
  },
  "include": [ "src" ],
  "exclude": [ "node_modules" ]
}